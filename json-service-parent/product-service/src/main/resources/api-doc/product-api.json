{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Demo",
    "description": "This is basic implementation of swagger API",
    "contact": {
      "name": "Reza Mousavi",
      "url": "linkedin.com/reza-mousavi-developer",
      "email": "rza.mousavi@gmail.com"
    },
    "version": "1.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Default Server URL"
    }
  ],
  "paths": {
    "/product": {
      "get": {
        "tags": [
          "product-controller"
        ],
        "operationId": "getAll",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "product-controller"
        ],
        "operationId": "save",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          }
        }
      }
    },
    "/product/{id}": {
      "get": {
        "tags": [
          "product-controller"
        ],
        "operationId": "get",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "product-controller"
        ],
        "operationId": "delete",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductRequest": {
        "required": [
          "code",
          "country-of-origin",
          "ean",
          "name",
          "producer"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "ean": {
            "type": "string"
          },
          "producer": {
            "type": "string"
          },
          "country-of-origin": {
            "type": "string"
          }
        }
      },
      "ProductResponse": {
        "required": [
          "code",
          "country-of-origin",
          "ean",
          "name",
          "producer"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "version": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "ean": {
            "type": "string"
          },
          "producer": {
            "type": "string"
          },
          "country-of-origin": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "ExmpaleToken": {
        "type": "apiKey",
        "description": "This is demo token",
        "name": "ExmpaleToken",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}